<div class="container">
    <h1>Lorry Details</h1>
    
    <div class="lorry-card">
        <h2>Lorry #<%= lorry._id.toString().slice(-6) %></h2>
        
        <div class="lorry-info">
            <div class="info-group">
                <label>Owner Name:</label>
                <span><%= lorry.ownerName %></span>
            </div>
            
            <div class="info-group">
                <label>Vehicle Type:</label>
                <span><%= lorry.vehicleType %></span>
            </div>
            
            <div class="info-group">
                <label>Location:</label>
                <span><%= lorry.location %></span>
            </div>
            
            <div class="info-group">
                <label>Capacity:</label>
                <span><%= lorry.capacity %> tons</span>
            </div>
            
            <div class="info-group">
                <label>Status:</label>
                <span class="status <%= lorry.status %>"><%= lorry.status %></span>
            </div>
            
            <% if (lorry.description) { %>
            <div class="info-group">
                <label>Description:</label>
                <span><%= lorry.description %></span>
            </div>
            <% } %>
        </div>
        
        <div class="actions">
            <% if (user && user.role === 'transporter') { %>
                <a href="/lorries/<%= lorry._id %>/edit" class="btn btn-edit">Edit Lorry</a>
                <form action="/lorries/<%= lorry._id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this lorry?')">Delete Lorry</button>
                </form>
            <% } %>
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
    
    <% if (typeof nearbyDeliveries !== 'undefined' && nearbyDeliveries.length > 0 && user && user.role === 'transporter' && lorry.status === 'available') { %>
    <div class="nearby-deliveries">
        <h2>Available Deliveries Near This Lorry</h2>
        <div class="delivery-list">
            <% nearbyDeliveries.forEach(delivery => { %>
                <div class="delivery-item">
                    <div class="delivery-info">
                        <h3>Delivery #<%= delivery._id.toString().slice(-6) %></h3>
                        <div class="delivery-details">
                            <p><strong>Pickup:</strong> <%= delivery.pickupLocation %></p>
                            <p><strong>Drop:</strong> <%= delivery.dropLocation %></p>
                            <p><strong>Goods:</strong> <%= delivery.goodsType %> (<%= delivery.weight %> kg)</p>
                            <p><strong>Pickup Date:</strong> <%= new Date(delivery.pickupDateTime).toLocaleString() %></p>
                        </div>
                    </div>
                    <div class="delivery-actions">
                        <a href="/deliveries/<%= delivery._id %>" class="btn btn-secondary">View Details</a>
                        <a href="/bid/<%= delivery._id %>" class="btn btn-primary">Book Delivery</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <% } else if (user && user.role === 'transporter' && lorry.status === 'available') { %>
    <div class="nearby-deliveries">
        <h2>Available Deliveries Near This Lorry</h2>
        <p class="no-deliveries">No available deliveries found near this lorry's location.</p>
    </div>
    <% } %>
</div>
