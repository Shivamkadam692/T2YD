<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2><i class="fas fa-key"></i> Reset Password</h2>
      <p>Enter your account email to receive a reset link</p>
    </div>
    <form method="post" action="/auth/forgot" class="form">
      <div class="form-group">
        <label for="email"><i class="fas fa-envelope"></i> Email</label>
        <input id="email" type="email" name="email" required autocomplete="email" />
      </div>
      <div class="form-actions">
        <button type="button" class="btn btn-outline" onclick="window.location='/auth/login'"><i class="fas fa-times"></i> Cancel</button>
        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Send reset link</button>
      </div>
    </form>
    <div class="auth-footer">
      <a href="/auth/login"><i class="fas fa-arrow-left"></i> Back to login</a>
    </div>
  </div>
</div>
